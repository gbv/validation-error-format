{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "message": {
      "description": "error message",
      "type": "string",
      "minLength": 1
    },
    "types": {
      "type": "array",
      "items": {
        "description": "identifier of an error type",
        "type": "string",
        "minLength": 1
      }
    },
    "level": { 
      "description": "error level",
      "type": "string",
      "enum": ["error", "warning", "info"],
      "default": "error"
    },
    "position": {
      "description": "error position",
      "anyOf": [
        {
          "description": "locators",
          "type": "array",
          "items": {
            "$ref": "#/$defs/locator" 
          }
        },
        {
          "description": "locator map",
          "type": "object",
          "patternProperties": {
            "^[a-z][a-z0-9-]*$": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "id": {
      "description": "error instance identifier",
      "type": "string"
    }
  },
  "$defs": {
    "locator": {
      "type": "object",
      "properties": {
        "dimension": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$"
        },
        "address": {
          "type": "string"
        },
        "errors": {
          "type": "array",
          "items": {
            "$ref": "#"
          }
        }
      },
      "required": ["dimension", "address"]
    }
  },
  "errormap": {
    "type": "object",
    "patternProperties": {
      "^[a-z][a-z0-9-]*$": {
        "type": "object",
        "description": "dimension",
        "patternProperties": {
          "^.*$": {
            "type": "array",
            "item": {
              "$ref": "#"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
}
